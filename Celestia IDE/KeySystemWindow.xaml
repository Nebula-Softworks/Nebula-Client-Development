<Window x:Class="Celestia_IDE.KeySystemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Controls="clr-namespace:Celestia_IDE.Controls"
        xmlns:Consoles="clr-namespace:Celestia_IDE.Controls.Console"
        xmlns:CefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="Nebula Client - Key System" 
        Height="550" Width="850"
        AllowsTransparency="True"
        WindowStyle="None"
        UseLayoutRounding="True"
        WindowStartupLocation="CenterScreen"
        materialdesign:ButtonAssist.CornerRadius="6"
        ToolTipService.Placement="MousePoint"
        ResizeMode="NoResize"
        Topmost="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Icon="Celestia IDE.ico"
        Background="{x:Null}">
    <Border x:Name="MainBackgroundBorder" 
            Margin="15"
            Background="#0a0a0a"
            CornerRadius="8"
            BorderThickness="1.5"
            BorderBrush="#0F41434A">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0"
                              x:Name="MainBackgroundBorder_Shadow"
                              Color="#0B0B0B"
                              BlurRadius="15"
                              Opacity="1" />
        </Border.Effect>

        <Border.Clip>
            <RectangleGeometry Rect="0,0,820,520"
                               RadiusX="8"
                               RadiusY="8"/>
        </Border.Clip>

        <Grid>

            <Ellipse x:Name="ClientManagerNotification"
                     Height="258.081"
                     Fill="{StaticResource Accent}"
                     Stroke="Transparent" 
                     VerticalAlignment="Top"
                     Margin="86.3,58.657,0,0"
                     Opacity="0.2"
                     IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="253.457">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-2.443"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="300"/>
                </Ellipse.Effect>
            </Ellipse>
            <Ellipse x:Name="ClientManagerNotification_Copy"
                Height="258.081"
                Fill="{StaticResource Accent}"
                Stroke="Transparent" 
                VerticalAlignment="Top"
                Margin="189.3,173.657,377.243,0"
                Opacity="0.3"
                IsHitTestVisible="False" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="6.725"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
                <Ellipse.Effect>
                    <BlurEffect Radius="300"/>
                </Ellipse.Effect>
            </Ellipse>

            <Button Width="45"
                        Height="35"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Content="&#xE8BB;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="10"
                        Foreground="#A4A6AA"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Padding="0" 
                    Margin="6"
                        Click="CloseButton_Click"/>

            <TextBlock FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins SemiBold"
                       LineStackingStrategy="BlockLineHeight"
                       LineHeight="36"
                       FontSize="30"
                       HorizontalAlignment="Left"
                       Foreground="#7ce5e3e7" 
                       Margin="124,140,0,236" d:LayoutOverrides="Height"><Run Text="The next&#xA;generation of "/><LineBreak/><Run Text="roblox&#xA;exploiting"/><Run Text=" "/><Run FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins Bold" Text="." Foreground="{StaticResource AccentTransparent}">
                   
                </Run></TextBlock>
            <TextBlock FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                       LineStackingStrategy="BlockLineHeight"
                       LineHeight="18"
                       FontSize="14"
                       Text="Welcome.&#10;To get started, let's log you in."
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Foreground="#7cc5c3c7" 
                       Margin="124,299,0,0"/>

        </Grid>
    </Border>
</Window>
