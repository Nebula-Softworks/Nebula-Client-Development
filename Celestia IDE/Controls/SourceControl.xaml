<Page x:Class="Celestia_IDE.Controls.SourceControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Celestia_IDE.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SourceControl">

    <Grid>
        <Label Foreground="#d5d3d7"
               FontSize="12"
               Margin="8"
               FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
               Content="Source Control" />
        <Label x:Name="inactive"
               Foreground="#d5d3d7"
               FontSize="14"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
               Content="Git is not installed"
               IsHitTestVisible="False" />
        <TreeView Background="Transparent"
                  BorderBrush="#CF322e36"
                  Margin="0 40 0 0"
                  BorderThickness="0 1.5 0 0"
                  Visibility="Visible" />
    </Grid>
</Page>
