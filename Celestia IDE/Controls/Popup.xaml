<UserControl x:Class="Celestia_IDE.Controls.Popup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Celestia_IDE.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             MouseLeftButtonDown="Button_MouseLeftButtonDown"
             UseLayoutRounding="True"
             mc:Ignorable="d">
    <Border x:Name="MainBackground"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#171619"
            BorderBrush="#aF322e36"
            BorderThickness="1.5"
            CornerRadius="8"
            IsHitTestVisible="True">
        <Border.Effect>
            <DropShadowEffect x:Name="MainBackgroundBorder_Shadow"
                              BlurRadius="100"
                              Opacity="0.8"
                              ShadowDepth="0"
                              Color="#0B0B0B" />
        </Border.Effect>
        <Grid Margin="20 15">
            <Button Margin="-20 -15"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0" />
            <StackPanel MaxWidth="400"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                <TextBlock x:Name="TitleBlock"
                           Grid.ColumnSpan="3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                           FontSize="14"
                           Foreground="#e5e3e7"
                           IsHitTestVisible="False"
                           Text="Title"
                           TextAlignment="Center" />
                <TextBlock x:Name="ContentBlock"
                           Grid.ColumnSpan="3"
                           Margin="0 2 0 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                           FontSize="13"
                           Foreground="#b4b6ba"
                           IsHitTestVisible="False"
                           Text="Content"
                           TextAlignment="Left"
                           TextWrapping="Wrap" />
                <StackPanel Margin="0 10 0 0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button x:Name="AccentButton"
                            Height="35"
                            Padding="16 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Background="{StaticResource Accent}"
                            BorderBrush="{StaticResource AccentOpaque}"
                            BorderThickness="1.5"
                            Content="OK"
                            FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                            FontSize="13"
                            FontWeight="Normal"
                            Foreground="#e5e3e7" />
                    <Button x:Name="MainButton"
                            Height="35"
                            Margin="8 0 0 0"
                            Padding="16 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Background="#8F322e36"
                            BorderBrush="#cf322e36"
                            BorderThickness="1.5"
                            Content="Cancel"
                            FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                            FontSize="13"
                            FontWeight="Normal"
                            Foreground="#e5e3e7" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
