<UserControl x:Class="Celestia_IDE.Controls.Settings.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Celestia_IDE.Controls.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="540"
             d:DesignWidth="800"
             MouseLeftButtonDown="Button_MouseLeftButtonDown"
             UseLayoutRounding="True"
             mc:Ignorable="d">
    <Border x:Name="MainBackground"
            Width="800"
            Height="540"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#171619"
            BorderBrush="#aF322e36"
            BorderThickness="1.5"
            CornerRadius="8"
            IsHitTestVisible="True">
        <Border.Effect>
            <DropShadowEffect x:Name="MainBackgroundBorder_Shadow"
                              BlurRadius="120"
                              Opacity="0.6"
                              ShadowDepth="0"
                              Color="#141414" />
        </Border.Effect>
        <Grid x:Name="MainGrid"
              Margin="20 15">
            <Button Margin="-20 -15"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0" />
            <Border Width="210"
                    Margin="-20 -15 0 -15"
                    HorizontalAlignment="Left"
                    Background="#1b1a1e"
                    BorderBrush="#cF322e36"
                    BorderThickness="0 0 1 0"
                    CornerRadius="8 0 0 8" />
            <TextBlock x:Name="TitleBlock"
                       Grid.ColumnSpan="3"
                       Margin="5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                       FontSize="14"
                       Foreground="#e5e3e7"
                       IsHitTestVisible="False"
                       Text="Settings"
                       TextAlignment="Center" />

            <StackPanel Width="170"
                        Margin="0 36 0 5"
                        HorizontalAlignment="Left">
                <RadioButton x:Name="Selectors_Interface"
                             Padding="11 0 0 0"
                             Checked="PageSelector_Checked"
                             Content="Interface"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             FontSize="12"
                             Foreground="#e5e3e7"
                             GroupName="SettingsRadioButtons"
                             IsChecked="True"
                             Style="{StaticResource ScriptCloudSelector}"
                             Tag="&#xe869;" />
                <RadioButton x:Name="Selectors_Keybinds"
                             Padding="11 0 0 0"
                             Checked="PageSelector_Checked"
                             Content="Keybinds"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             FontSize="12"
                             Foreground="#e5e3e7"
                             GroupName="SettingsRadioButtons"
                             Style="{StaticResource ScriptCloudSelector}"
                             Tag="keyboard" />
                <RadioButton x:Name="Selectors_Editor"
                             Padding="11 0 0 0"
                             Checked="PageSelector_Checked"
                             Content="Editor"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             FontSize="12"
                             Foreground="#e5e3e7"
                             GroupName="SettingsRadioButtons"
                             Style="{StaticResource ScriptCloudSelector}"
                             Tag="code" />
                <RadioButton x:Name="Selectors_Appearance"
                             Padding="11 0 0 0"
                             Checked="PageSelector_Checked"
                             Content="Appearance"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             FontSize="12"
                             Foreground="#e5e3e7"
                             GroupName="SettingsRadioButtons"
                             Style="{StaticResource ScriptCloudSelector}"
                             Tag="&#xe40a;" />
                <RadioButton x:Name="Selectors_Engine"
                             Padding="11 0 0 0"
                             Checked="PageSelector_Checked"
                             Content="Engine"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             FontSize="12"
                             Foreground="#e5e3e7"
                             GroupName="SettingsRadioButtons"
                             Style="{StaticResource ScriptCloudSelector}"
                             Tag="api" />
                <RadioButton x:Name="Selectors_Account"
                             Padding="11 0 0 0"
                             Checked="PageSelector_Checked"
                             Content="Account"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             FontSize="12"
                             Foreground="#e5e3e7"
                             GroupName="SettingsRadioButtons"
                             Style="{StaticResource ScriptCloudSelector}"
                             Tag="person" />
            </StackPanel>

            <TextBlock x:Name="CurrentSettingsNameBlock"
                       Margin="214 7 0 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                       FontSize="12"
                       Foreground="#c5c3c7"
                       IsHitTestVisible="False"
                       Text="Interface Settings"
                       TextAlignment="Center" />

            <ScrollViewer x:Name="MainContentScroller"
                          Margin="210 42 -3 0">
                <StackPanel x:Name="Pages_Interface"
                            Margin="0 0 3 0">
                </StackPanel>
            </ScrollViewer>

            <StackPanel x:Name="Pages_Keybinds"
                        Margin="0 0 3 0">
            </StackPanel>
            <StackPanel x:Name="Pages_Editor"
                        Margin="0 0 3 0">
            </StackPanel>
            <StackPanel x:Name="Pages_Appearance"
                        Margin="0 0 3 0">
            </StackPanel>
            <StackPanel x:Name="Pages_Engine"
                        Margin="0 0 3 0">
            </StackPanel>
            <Grid x:Name="Pages_Account"
                  Margin="0 0 3 0">
                <Label HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Content="Accounts&#x0a;Coming Soon"
                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                       FontSize="14"
                       Foreground="#d5d3d7"
                       IsHitTestVisible="False" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
