<UserControl x:Class="Celestia_IDE.Controls.Settings.SettingsTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Celestia_IDE.Controls.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Margin="2 1 1 6"
             VerticalAlignment="Top"
             d:DesignWidth="542"
             mc:Ignorable="d">
    <Border x:Name="MainBackground"
            Height="85"
            Background="#1b1a1e"
            BorderBrush="#cf322e36"
            BorderThickness="1 1 1 1"
            CornerRadius="8">
        <Grid>
            <StackPanel MaxWidth="400"
                        Margin="16 14"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                <TextBlock x:Name="TitleBlock"
                           Grid.ColumnSpan="3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                           FontSize="13"
                           Foreground="#e5e3e7"
                           IsHitTestVisible="False"
                           Text="Default Tab Header"
                           TextAlignment="Center" />
                <TextBlock x:Name="ContentBlock"
                           Grid.ColumnSpan="3"
                           Margin="0 2 0 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                           FontSize="10"
                           Foreground="#b4b6ba"
                           IsHitTestVisible="False"
                           Text="Sets the default header of New Text Files opened in&#10;the code editor."
                           TextAlignment="Left"
                           TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel Grid.Column="2"
                        Margin="6 6 16 6"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                <Border Width="160"
                        Height="33"
                        Background="#8F322e36"
                        BorderBrush="#CF322e36"
                        BorderThickness="1"
                        CornerRadius="5">
                    <Border.Clip>
                        <RectangleGeometry RadiusX="5"
                                           RadiusY="5"
                                           Rect="0,0,200,32" />
                    </Border.Clip>
                    <TextBox Name="input"
                             Width="160"
                             Height="31"
                             Padding="8 -1"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Right"
                             Background="Transparent"
                             BorderBrush="Transparent"
                             BorderThickness="0"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                             Foreground="#d5d3d7"
                             Tag="Untitled Text File"
                             Style="{StaticResource placeHolderNoUnderline}"/>
                </Border>
            </StackPanel>

        </Grid>
    </Border>

</UserControl>
