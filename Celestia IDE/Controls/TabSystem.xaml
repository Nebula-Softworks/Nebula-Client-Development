<UserControl x:Class="Celestia_IDE.Controls.TabSystem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Core="clr-namespace:Celestia_IDE.Core.Editor"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Celestia_IDE.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             UseLayoutRounding="True"
             mc:Ignorable="d">
    <UserControl.Resources>

        <Core:EndsWithFinder x:Key="EndsWithFinder" />
        <Style x:Key="Tabs"
               TargetType="{x:Type TabControl}">
            <Setter Property="Control.HorizontalContentAlignment" Value="Center" />
            <Setter Property="Control.VerticalContentAlignment" Value="Center" />
            <Setter Property="Control.Background" Value="{StaticResource TabItem.Selected.Background}" />
            <Setter Property="Control.BorderThickness" Value="0" />

            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid x:Name="templateRoot"
                              ClipToBounds="False"
                              KeyboardNavigation.TabNavigation="Local"
                              SnapsToDevicePixels="true">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="ColumnDefinition0" />
                                <ColumnDefinition x:Name="ColumnDefinition1"
                                                  Width="0" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="RowDefinition0"
                                               Height="50" />
                                <RowDefinition x:Name="RowDefinition1"
                                               Height="*" />
                            </Grid.RowDefinitions>

                            <ScrollViewer x:Name="TabScrollViewer"
                                          Height="48"
                                          Margin="5 -2 5 5"
                                          VerticalAlignment="Top"
                                          ClipToBounds="True"
                                          HorizontalScrollBarVisibility="Auto"
                                          PreviewMouseWheel="maintabs_PreviewMouseWheel"
                                          VerticalScrollBarVisibility="Disabled">

                                <StackPanel Height="50"
                                            Orientation="Horizontal">

                                    <TabPanel x:Name="headerPanel"
                                              Height="34"
                                              VerticalAlignment="Center"
                                              Background="#00FFFFFF"
                                              ClipToBounds="False"
                                              IsItemsHost="true"
                                              KeyboardNavigation.TabIndex="1"
                                              ZIndex="1" />

                                    <!--
                                        the margin is done this way so the scrollwheels and stuff dont
                                        make it look like shit again (it was at the like very top before)
                                    -->

                                    <Border Width="34"
                                            Height="34"
                                            Margin="2 7 0 0"
                                            VerticalAlignment="Top"
                                            Background="#8F322e36"
                                            BorderBrush="#CF322e36"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            ToolTip="New Text File"
                                            ToolTipService.HasDropShadow="True"
                                            ToolTipService.HorizontalOffset="-25"
                                            ToolTipService.InitialShowDelay="500"
                                            ToolTipService.Placement="Bottom"
                                            ToolTipService.ShowsToolTipOnKeyboardFocus="True"
                                            ToolTipService.VerticalOffset="8">
                                        <Button x:Name="AddTabButton"
                                                Margin="-1"
                                                Padding="0 0 0 2"
                                                VerticalContentAlignment="Center"
                                                materialDesign:ButtonAssist.CornerRadius="6"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                Click="ButtonTabs"
                                                Content="&#xE710;"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="16"
                                                Foreground="#CF84868A" />
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>

                            <Border x:Name="contentPanel"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0 -2 0 0"
                                    Background="Transparent"
                                    BorderBrush="{TemplateBinding Control.BorderBrush}"
                                    BorderThickness="{TemplateBinding Control.BorderThickness}"
                                    KeyboardNavigation.DirectionalNavigation="Contained"
                                    KeyboardNavigation.TabIndex="2"
                                    KeyboardNavigation.TabNavigation="Local">

                                <ContentPresenter ContentSource="SelectedContent" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Style for the tab items  -->
        <Style x:Key="Tab"
               TargetType="{x:Type TabItem}">
            <Setter Property="AllowDrop" Value="True" />
            <EventSetter Event="MouseMove"
                         Handler="TabItem_PreviewMouseMove" />
            <EventSetter Event="Drop"
                         Handler="TabItem_Drop" />
            <Setter Property="Control.FontFamily" Value="/Celestia IDE;component/Assets/Fonts/#Poppins Medium" />
            <Setter Property="Control.FontSize" Value="13" />
            <Setter Property="FrameworkElement.FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Control.Foreground" Value="#A4A6AA" />
            <Setter Property="Control.Background" Value="#00ffffff" />
            <Setter Property="FrameworkElement.Margin" Value="0 -1 1 1" />
            <Setter Property="Control.HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Control.VerticalContentAlignment" Value="Center" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid x:Name="templateRoot"
                              Height="34"
                              Background="{x:Null}"
                              ClipToBounds="False"
                              SnapsToDevicePixels="true">

                            <Border x:Name="mainBorder"
                                    Margin="0 0 4 0"
                                    HorizontalAlignment="Stretch"
                                    Background="#8F322e36"
                                    BorderBrush="#CF322e36"
                                    BorderThickness="1"
                                    CornerRadius="5 5 5 5" />

                            <StackPanel Margin="0 0 4 0"
                                        Orientation="Horizontal">
                                <Border Width="18"
                                        Margin="5 0 0 0"
                                        ClipToBounds="False">
                                    <Grid>
                                        <Image x:Name="Icon"
                                               Width="18"
                                               VerticalAlignment="Center"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               RenderTransformOrigin="0.5,0.5"
                                               Source="/Celestia IDE;component/Assets/Graphics/Lua.png"
                                               Visibility="Collapsed" />

                                        <Label x:Name="IconText"
                                               Width="12"
                                               Padding="0"
                                               VerticalAlignment="Center"
                                               HorizontalContentAlignment="Left"
                                               VerticalContentAlignment="Center"
                                               Content="&#xe7c3;"
                                               FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Segoe Fluent Icons"
                                               FontSize="12"
                                               Foreground="{TemplateBinding Foreground}"
                                               RenderTransformOrigin="0.5,0.5"
                                               SnapsToDevicePixels="True"
                                               TextOptions.TextFormattingMode="Display"
                                               UseLayoutRounding="True"
                                               Visibility="Collapsed" />

                                        <Label x:Name="IconMisc"
                                               Width="12"
                                               Padding="0"
                                               VerticalAlignment="Center"
                                               HorizontalContentAlignment="Left"
                                               VerticalContentAlignment="Center"
                                               Content="&#xf249;"
                                               FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Font Awesome 6 Free Solid"
                                               FontSize="12"
                                               Foreground="{TemplateBinding Foreground}"
                                               RenderTransformOrigin="0.5,0.5"
                                               SnapsToDevicePixels="True"
                                               TextOptions.TextFormattingMode="Display"
                                               UseLayoutRounding="True" />
                                    </Grid>
                                </Border>

                                <Label x:Name="contentPresenter"
                                       Margin="2 0 5 0"
                                       HorizontalAlignment="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                       VerticalAlignment="Center"
                                       Content="{TemplateBinding Header}"
                                       Focusable="false"
                                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins Medium"
                                       FontSize="{TemplateBinding FontSize}"
                                       Foreground="{TemplateBinding Foreground}"
                                       SnapsToDevicePixels="True"
                                       TextOptions.TextFormattingMode="Display"
                                       UseLayoutRounding="True" />

                                <Button x:Name="CloseButton"
                                        Width="14"
                                        Height="14"
                                        Margin="2 0 8 0"
                                        Padding="0 0 0 0"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Click="ButtonTabs"
                                        Content="&#xe894;"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="8"
                                        FontWeight="Medium"
                                        Foreground="{TemplateBinding Foreground}"
                                        Visibility="Collapsed" />

                            </StackPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CloseButton" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="CloseButton" Property="Visibility" Value="Visible" />
                            </Trigger>


                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="false" />

                                    <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Top" />

                                </MultiDataTrigger.Conditions>

                                <Setter Property="Panel.ZIndex" Value="1" />

                                <Setter TargetName="mainBorder" Property="Border.Background" Value="#8F322e36" />

                                <Setter TargetName="mainBorder" Property="Border.BorderBrush" Value="#CF322e36" />

                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="true" />
                                    <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Top" />
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Panel.ZIndex" Value="1" />
                                <Setter TargetName="mainBorder" Property="Border.Background" Value="{DynamicResource Accent}" />
                                <Setter TargetName="mainBorder" Property="Border.BorderBrush" Value="{DynamicResource AccentOpaque}" />
                            </MultiDataTrigger>


                            <DataTrigger Binding="{Binding Header.Text, RelativeSource={RelativeSource Self}, Converter={StaticResource EndsWithFinder}, ConverterParameter='.lua'}"
                                         Value="True">

                                <Setter TargetName="Icon" Property="Visibility" Value="Visible" />

                                <Setter TargetName="IconText" Property="Visibility" Value="Collapsed" />

                                <Setter TargetName="IconMisc" Property="Visibility" Value="Collapsed" />

                            </DataTrigger>

                            <DataTrigger Binding="{Binding Header.Text, RelativeSource={RelativeSource Self}, Converter={StaticResource EndsWithFinder}, ConverterParameter='.txt'}"
                                         Value="True">

                                <Setter TargetName="Icon" Property="Visibility" Value="Collapsed" />

                                <Setter TargetName="IconText" Property="Visibility" Value="Visible" />

                                <Setter TargetName="IconMisc" Property="Visibility" Value="Collapsed" />


                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="true" />
                        <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Top" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Foreground" Value="#f5f3f7" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>


        <!--  used for tabname edit  -->
        <Style x:Key="InvisibleTextBox"
               TargetType="{x:Type TextBox}">
            <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
            <Setter Property="CaretBrush" Value="#FFFFFFFF" />
            <Setter Property="Foreground" Value="#FFFFFFFF" />
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontFamily" Value="/Celestia IDE;component/Assets/Fonts/#Poppins Medium" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsInactiveSelectionHighlightEnabled" Value="True" />
                        <Condition Property="IsSelectionActive" Value="False" />
                    </MultiTrigger.Conditions>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Border x:Name="Main"
                Background="Transparent"
                BorderBrush="#CF322e36"
                BorderThickness="0">

            <TabControl x:Name="maintabs"
                        Margin="4 2 5 5"
                        Background="{x:Null}"
                        BorderBrush="#FF282828"
                        BorderThickness="0"
                        SelectionChanged="maintabs_SelectionChanged"
                        Style="{StaticResource Tabs}"
                        UseLayoutRounding="True" />

        </Border>
    </Grid>
</UserControl>
