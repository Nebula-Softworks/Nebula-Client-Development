<UserControl x:Class="Celestia_IDE.Controls.Settings.SettingsSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Celestia_IDE.Controls.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             VerticalAlignment="Top"
             Margin="2 1 1 6"
             d:DesignWidth="542">
    <Border x:Name="MainBackground"
            CornerRadius="8"
            Height="85"
            BorderBrush="#cf322e36"
            Background="#1b1a1e"
            BorderThickness="1 1 1 1">
        <Grid>
            <StackPanel Orientation="Vertical"
                        MaxWidth="400"
                        Margin="16 14"
                        HorizontalAlignment="Left">
                <TextBlock x:Name="TitleBlock"
                           Grid.ColumnSpan="3"
                           TextAlignment="Center"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="Window Opacity"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                           FontSize="13"
                           Foreground="#e5e3e7"
                           IsHitTestVisible="False" />
                <TextBlock x:Name="ContentBlock"
                           Grid.ColumnSpan="3"
                           TextAlignment="Left"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="0 2 0 0"
                           TextWrapping="Wrap"
                           Text="Opacity Of The Window&#10;Lower values allow you to see through the window"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                           FontSize="10"
                           Foreground="#b4b6ba"
                           IsHitTestVisible="False" />
            </StackPanel>

            <StackPanel Orientation="Vertical"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="6 6 16 6">
                <TextBlock x:Name="ValueBlock"
                           Grid.ColumnSpan="3"
                           TextAlignment="Right"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           TextWrapping="Wrap"
                           Text="0.1 Opacity"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                           FontSize="11"
                           Foreground="#b4b6ba"
                           IsHitTestVisible="False" />
                <Slider x:Name="MainSlider"
                        Width="200"
                        Value="1"
                        Margin="0 4 0 0"
                        IsSnapToTickEnabled="True"
                        TickFrequency="1"
                        Maximum="10"
                        Minimum="0"
                        Opacity="0.8"
                        Foreground="#d5d3d7"
                        materialDesign:SliderAssist.OnlyShowFocusVisualWhileDragging="True">

                    <Slider.Resources>
                        <Style TargetType="Thumb">
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleY="0.7"
                                                    ScaleX="0.7"
                                                    CenterX="15"
                                                    CenterY="15" />

                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Slider.Resources>

                </Slider>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
