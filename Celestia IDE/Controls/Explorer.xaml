<Page x:Class="Celestia_IDE.Controls.Explorer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:core="clr-namespace:Celestia_IDE.Core.ExplorerSystem"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Celestia_IDE.Controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="Explorer"
      d:DesignHeight="840"
      d:DesignWidth="240"
      DataContext="{Binding A}"
      mc:Ignorable="d">

    <Page.Resources>
        <core:BoolToVisibilityConverter x:Key="TrueToVisible" />
        <core:BoolToVisibilityConverter x:Key="FalseToVisible"
                                        Invert="True" />
        <Style x:Key="InvisibleTextBox"
               TargetType="{x:Type TextBox}">
            <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
            <Setter Property="CaretBrush" Value="#FFFFFFFF" />
            <Setter Property="Foreground" Value="#FFFFFFFF" />
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsInactiveSelectionHighlightEnabled" Value="True" />
                        <Condition Property="IsSelectionActive" Value="False" />
                    </MultiTrigger.Conditions>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid>
        <Label Margin="8"
               Content="Workspace Explorer"
               FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
               FontSize="12"
               Foreground="#d5d3d7" />
        <Label x:Name="inactive"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="No Workspace&#x0a;Selected"
               FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
               FontSize="14"
               Foreground="#d5d3d7"
               IsHitTestVisible="False" />
        <TreeView x:Name="Main"
                  Margin="0 90 0 0"
                  Padding="0 0 0 0"
                  AllowDrop="True"
                  Background="Transparent"
                  BorderBrush="#CF322e36"
                  BorderThickness="0"
                  FocusVisualStyle="{x:Null}"
                  Foreground="#d5d3d7"
                  MouseDoubleClick="Workspace_SelectedItemChanged"
                  PreviewMouseLeftButtonDown="Main_MouseDi"
                  VirtualizingPanel.IsVirtualizing="False"
                  Visibility="Visible">

            <TreeView.ContextMenu>
                <ContextMenu FocusVisualStyle="{x:Null}">
                    <MenuItem Click="NewFile_Click"
                              Header="New File" />
                    <MenuItem Click="NewFolder_Click"
                              Header="New Folder" />
                </ContextMenu>
            </TreeView.ContextMenu>


            <TreeView.Resources>

                <Style BasedOn="{StaticResource MaterialDesignTreeViewItem}"
                       TargetType="TreeViewItem">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="AllowDrop" Value="True" />
                    <Setter Property="BorderBrush" Value="{x:Null}" />
                </Style>
                <HierarchicalDataTemplate DataType="{x:Type local:FolderItem}"
                                          ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 0 5 0"
                                   VerticalAlignment="Center"
                                   FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                                   FontSize="14"
                                   Foreground="#A4A6AA"
                                   Text="folder" />
                        <Grid>
                            <TextBlock VerticalAlignment="Center"
                                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                                       Foreground="#d5d3d7"
                                       Text="{Binding Header}"
                                       Visibility="{Binding IsRenaming, Converter={StaticResource FalseToVisible}}" />

                            <TextBox Height="24"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                                     Foreground="#d5d3d7"
                                     KeyDown="Rename_KeyDown"
                                     LostFocus="Rename_LostFocus"
                                     Style="{StaticResource InvisibleTextBox}"
                                     Text="{Binding Header, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsRenaming, Converter={StaticResource TrueToVisible}}" />
                        </Grid>
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type local:LuaFileItem}">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="14"
                               Height="14"
                               Margin="0 0 5 0"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Source="/Celestia IDE;component/Assets/Graphics/Lua.png" />
                        <Grid>
                            <TextBlock VerticalAlignment="Center"
                                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                                       Foreground="#d5d3d7"
                                       Text="{Binding Header}"
                                       Visibility="{Binding IsRenaming, Converter={StaticResource FalseToVisible}}" />

                            <TextBox Height="24"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                                     Foreground="#d5d3d7"
                                     KeyDown="Rename_KeyDown"
                                     LostFocus="Rename_LostFocus"
                                     Style="{StaticResource InvisibleTextBox}"
                                     Text="{Binding Header, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsRenaming, Converter={StaticResource TrueToVisible}}" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>

                <DataTemplate DataType="{x:Type local:TextFileItem}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 0 5 0"
                                   VerticalAlignment="Center"
                                   FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Segoe Fluent Icons"
                                   FontSize="14"
                                   Foreground="#A4A6AA"
                                   Text="&#xe7c3;" />
                        <Grid>
                            <TextBlock VerticalAlignment="Center"
                                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                                       Foreground="#d5d3d7"
                                       Text="{Binding Header}"
                                       Visibility="{Binding IsRenaming, Converter={StaticResource FalseToVisible}}" />

                            <TextBox Height="24"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                                     Foreground="#d5d3d7"
                                     KeyDown="Rename_KeyDown"
                                     LostFocus="Rename_LostFocus"
                                     Style="{StaticResource InvisibleTextBox}"
                                     Text="{Binding Header, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsRenaming, Converter={StaticResource TrueToVisible}}" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>


                <DataTemplate DataType="{x:Type local:OtherFileItem}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0 0 5 0"
                                   VerticalAlignment="Center"
                                   FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                                   FontSize="14"
                                   Foreground="#A4A6AA"
                                   Text="code" />

                        <Grid>
                            <TextBlock VerticalAlignment="Center"
                                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                                       Foreground="#d5d3d7"
                                       Text="{Binding Header}"
                                       Visibility="{Binding IsRenaming, Converter={StaticResource FalseToVisible}}" />

                            <TextBox Name="renameinput"
                                     Height="24"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                                     Foreground="#d5d3d7"
                                     KeyDown="Rename_KeyDown"
                                     LostFocus="Rename_LostFocus"
                                     Style="{StaticResource InvisibleTextBox}"
                                     Text="{Binding Header, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsRenaming, Mode=TwoWay, Converter={StaticResource TrueToVisible}}" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
        <Border Margin="0 40 0 0"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderBrush="#CF322e36"
                BorderThickness="0 1.5 0 0" />

        <Border x:Name="SearchBorder"
                Height="38"
                Margin="6 46 6 0"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderBrush="#CF322e36"
                BorderThickness="1"
                CornerRadius="4">
            <TextBox x:Name="WorkspaceSearch"
                     Grid.Row="1"
                     Padding="30 0 0 0"
                     VerticalContentAlignment="Center"
                     Background="Transparent"
                     BorderBrush="Transparent"
                     BorderThickness="0"
                     FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                     Foreground="#d5d3d7"
                     Tag="Search Workspace"
                     TextChanged="WorkspaceSearch_TextChanged"
                     TextSearch.Text="search" />
        </Border>
    </Grid>
</Page>
