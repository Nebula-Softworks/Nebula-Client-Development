<UserControl x:Class="Celestia_IDE.Controls.Console.OutputConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Celestia_IDE.Controls.Console"
             mc:Ignorable="d"
             d:DesignHeight="188"
             d:DesignWidth="1018"
             DataContext="{RelativeSource Mode=Self}">
    <ListBox Visibility="Visible"
             Background="Transparent"
             x:Name="Main"
             Margin="20 0 20 0"
             Padding="0"
             SelectionMode="Single"
             SelectionChanged="Main_SelectionChanged">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <VirtualizingStackPanel IsItemsHost="True"
                                        Orientation="Vertical" />
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemContainerStyle>
            <Style TargetType="{x:Type ListBoxItem}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListBoxItem}" >
                            <ContentPresenter Height="NaN"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ListBox.ItemContainerStyle>
        <ListBox.ItemTemplate>
            <DataTemplate x:Name="ItemTemplateFrfr">
                <DockPanel MinHeight="25"
                           Height="NaN"
                           LastChildFill="False">
                    <Label x:Name="Time"
                           Width="NaN"
                           Padding="0,0,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           VerticalContentAlignment="Center"
                           Background="{x:Null}"
                           BorderBrush="Transparent"
                           BorderThickness="0"
                           Content="{Binding Time}"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#JetBrains Mono Semibold"
                           FontSize="12"
                           Foreground="#A4A6AA"
                           Margin="0 3.5 4 0" />
                    <Label x:Name="Type"
                           Width="NaN"
                           Padding="0,0,0,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           VerticalContentAlignment="Center"
                           Background="{x:Null}"
                           BorderBrush="Transparent"
                           BorderThickness="0"
                           Margin="0 3.5 0 0"
                           Content="{Binding Type}"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#JetBrains Mono Semibold"
                           FontSize="12"
                           Foreground="{Binding Color}" />
                    <TextBlock x:Name="Message"
                               Width="NaN"
                               Padding="0,0,0,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               TextAlignment="Left"
                               TextWrapping="Wrap"
                               Background="{x:Null}"
                               Text="{Binding Message}"
                               FontFamily="/Celestia IDE;component/Assets/Fonts/#JetBrains Mono Semibold"
                               FontSize="12"
                               Margin="0 3.5 0 0"
                               Foreground="#d5d3d7" />
                </DockPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>