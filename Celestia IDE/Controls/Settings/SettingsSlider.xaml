<UserControl x:Class="Celestia_IDE.Controls.Settings.SettingsSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Celestia_IDE.Controls.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Margin="2 1 1 6"
             VerticalAlignment="Top"
             d:DesignWidth="542"
             mc:Ignorable="d">
    <Border x:Name="MainBackground"
            Height="85"
            Background="#1b1a1e"
            BorderBrush="#cf322e36"
            BorderThickness="1 1 1 1"
            CornerRadius="8">
        <Grid>
            <StackPanel MaxWidth="400"
                        Margin="16 14"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                <TextBlock x:Name="TitleBlock"
                           Grid.ColumnSpan="3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                           FontSize="13"
                           Foreground="#e5e3e7"
                           IsHitTestVisible="False"
                           Text="Window Opacity"
                           TextAlignment="Center" />
                <TextBlock x:Name="ContentBlock"
                           Grid.ColumnSpan="3"
                           Margin="0 2 0 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                           FontSize="10"
                           Foreground="#b4b6ba"
                           IsHitTestVisible="False"
                           Text="Opacity Of The Window&#10;Lower values allow you to see through the window"
                           TextAlignment="Left"
                           TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel Grid.Column="2"
                        Margin="6 6 16 6"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                <TextBlock x:Name="ValueBlock"
                           Grid.ColumnSpan="3"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                           FontSize="11"
                           Foreground="#b4b6ba"
                           IsHitTestVisible="False"
                           Text="0.1 Opacity"
                           TextAlignment="Right"
                           TextWrapping="Wrap" />
                <Slider x:Name="MainSlider"
                        Width="200"
                        Margin="0 4 0 0"
                        materialDesign:SliderAssist.OnlyShowFocusVisualWhileDragging="True"
                        Foreground="#d5d3d7"
                        IsSnapToTickEnabled="True"
                        Maximum="10"
                        Minimum="0"
                        Opacity="0.8"
                        TickFrequency="1"
                        Value="1">

                    <Slider.Resources>
                        <Style TargetType="Thumb">
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <ScaleTransform CenterX="15" CenterY="15" ScaleX="0.7" ScaleY="0.7" />

                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Slider.Resources>

                </Slider>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
