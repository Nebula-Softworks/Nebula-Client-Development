<UserControl x:Class="Celestia_IDE.Controls.Settings.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Celestia_IDE.Controls.Settings"
             mc:Ignorable="d"
             UseLayoutRounding="True"
             MouseLeftButtonDown="Button_MouseLeftButtonDown"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="540"
             d:DesignWidth="800">
    <Border x:Name="MainBackground"
            Background="#171619"
            BorderThickness="1.5"
            IsHitTestVisible="True"
            BorderBrush="#aF322e36"
            CornerRadius="8"
            Width="800"
            Height="540"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0"
                              x:Name="MainBackgroundBorder_Shadow"
                              Color="#141414"
                              BlurRadius="120"
                              Opacity="0.6" />
        </Border.Effect>
        <Grid Margin="20 15"
              x:Name="MainGrid">
            <Button Margin="-20 -15"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0" />
            <Border CornerRadius="8 0 0 8"
                    Background="#1b1a1e"
                    BorderBrush="#cF322e36"
                    BorderThickness="0 0 1 0"
                    Width="210"
                    HorizontalAlignment="Left"
                    Margin="-20 -15 0 -15" />
            <TextBlock x:Name="TitleBlock"
                       Grid.ColumnSpan="3"
                       TextAlignment="Center"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="Settings"
                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                       FontSize="14"
                       Margin="5"
                       Foreground="#e5e3e7"
                       IsHitTestVisible="False" />

            <StackPanel Margin="0 36 0 5"
                        HorizontalAlignment="Left"
                        Width="170">
                <RadioButton x:Name="Selectors_Interface"
                             Tag="&#xe869;"
                             Padding="11 0 0 0"
                             Foreground="#e5e3e7"
                             FontSize="12"
                             Content="Interface"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             IsChecked="True"
                             GroupName="SettingsRadioButtons"
                             Checked="PageSelector_Checked"
                             Style="{StaticResource ScriptCloudSelector}" />
                <RadioButton x:Name="Selectors_Editor"
                             Tag="keyboard"
                             Padding="11 0 0 0"
                             Foreground="#e5e3e7"
                             FontSize="12"
                             Content="Editor"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             GroupName="SettingsRadioButtons"
                             Checked="PageSelector_Checked"
                             Style="{StaticResource ScriptCloudSelector}" />
                <RadioButton x:Name="Selectors_Appearance"
                             Tag="&#xe40a;"
                             Padding="11 0 0 0"
                             Foreground="#e5e3e7"
                             FontSize="12"
                             Content="Appearance"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             GroupName="SettingsRadioButtons"
                             Checked="PageSelector_Checked"
                             Style="{StaticResource ScriptCloudSelector}" />
                <RadioButton x:Name="Selectors_Engine"
                             Tag="api"
                             Padding="11 0 0 0"
                             Foreground="#e5e3e7"
                             FontSize="12"
                             Content="Engine"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             GroupName="SettingsRadioButtons"
                             Checked="PageSelector_Checked"
                             Style="{StaticResource ScriptCloudSelector}" />
                <RadioButton x:Name="Selectors_Account"
                             Tag="person"
                             Padding="11 0 0 0"
                             Foreground="#e5e3e7"
                             FontSize="12"
                             Content="Account"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                             GroupName="SettingsRadioButtons"
                             Checked="PageSelector_Checked"
                             Style="{StaticResource ScriptCloudSelector}" />
            </StackPanel>

            <TextBlock x:Name="CurrentSettingsNameBlock"
                       TextAlignment="Center"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="Interface Settings"
                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                       FontSize="12"
                       Margin="214 7 0 0"
                       Foreground="#c5c3c7"
                       IsHitTestVisible="False" />

            <ScrollViewer x:Name="MainContentScroller"
                          Margin="210 42  -3 0">
                <StackPanel x:Name="Pages_Interface">
                </StackPanel>
            </ScrollViewer>

            <StackPanel x:Name="Pages_Editor">
            </StackPanel>
            <StackPanel x:Name="Pages_Appearance">
            </StackPanel>
            <StackPanel x:Name="Pages_Engine">
            </StackPanel>
            <Grid x:Name="Pages_Account">
                <Label Foreground="#d5d3d7"
                       FontSize="14"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center"
                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                       Content="Accounts&#x0a;Coming Soon"
                       IsHitTestVisible="False" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
