<UserControl x:Class="Celestia_IDE.Controls.InstanceManager.InstanceManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Celestia_IDE.Controls.InstanceManager"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="540"
             d:DesignWidth="800"
             MouseLeftButtonDown="Button_MouseLeftButtonDown"
             UseLayoutRounding="True"
             mc:Ignorable="d">
    <Border x:Name="MainBackground"
            Width="800"
            Height="540"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#171619"
            BorderBrush="#aF322e36"
            BorderThickness="1.5"
            CornerRadius="8"
            IsHitTestVisible="True">
        <Border.Effect>
            <DropShadowEffect x:Name="MainBackgroundBorder_Shadow"
                              BlurRadius="120"
                              Opacity="0.6"
                              ShadowDepth="0"
                              Color="#141414" />
        </Border.Effect>
        <Grid x:Name="MainGrid"
              Margin="20 15">
            <Button Margin="-20 -15"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0" />
            <Border Width="210"
                    Margin="-20 -15 0 -15"
                    HorizontalAlignment="Left"
                    Background="#1b1a1e"
                    BorderBrush="#cF322e36"
                    BorderThickness="0 0 1 0"
                    CornerRadius="8 0 0 8" />
            <TextBlock x:Name="TitleBlock"
                       Grid.ColumnSpan="3"
                       Margin="5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                       FontSize="14"
                       Foreground="#e5e3e7"
                       IsHitTestVisible="False"
                       Text="Instance Manager"
                       TextAlignment="Center" />

            <StackPanel Width="170"
                        Margin="0 36 0 5"
                        HorizontalAlignment="Left">
                <RadioButton Padding="11 0 0 0"
                             Content="Managed"
                             FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Phosphor"
                             FontSize="12"
                             Foreground="#e5e3e7"
                             IsChecked="True"
                             Style="{StaticResource ScriptCloudSelector}"
                             Tag="&#xebb6;" />
            </StackPanel>

            <ScrollViewer x:Name="MainContentScroller"
                          Margin="210 0 -3 0">
                <StackPanel x:Name="Instances" />
            </ScrollViewer>

        </Grid>
    </Border>
</UserControl>
