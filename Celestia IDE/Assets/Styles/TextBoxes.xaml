<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
        <ResourceDictionary Source="/Assets/Styles/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <!--#region Placeholder Textbox-->
    <Style BasedOn="{StaticResource {x:Type TextBox}}"
           TargetType="{x:Type TextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <Label Width="30"
                               Height="30"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               HorizontalContentAlignment="Right"
                               VerticalContentAlignment="Center"
                               Content="{TemplateBinding TextSearch.Text}"
                               FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                               FontSize="17"
                               FontWeight="Light"
                               Foreground="{TemplateBinding Foreground}" />
                        <TextBox x:Name="textSource"
                                 Padding="15 0 0 0"
                                 VerticalAlignment="Stretch"
                                 HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                 Panel.ZIndex="2"
                                 materialDesign:TextFieldAssist.IncludeSpellingSuggestions="True"
                                 materialDesign:TextFieldAssist.UnderlineBrush="{TemplateBinding Foreground}"
                                 materialDesign:TextFieldAssist.UnderlineCornerRadius="0 0 4 4"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontFamily="{TemplateBinding FontFamily}"
                                 Foreground="{TemplateBinding Foreground}"
                                 Style="{StaticResource MaterialDesignTextBox}"
                                 Text="{Binding Text, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}" />

                        <Label Padding="{TemplateBinding Padding}"
                               VerticalAlignment="Stretch"
                               HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                               VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                               Background="{TemplateBinding Background}"
                               BorderThickness="0"
                               Content="{TemplateBinding Tag}"
                               FontFamily="{TemplateBinding FontFamily}">
                            <Label.Style>
                                <Style TargetType="{x:Type Label}">
                                    <Setter Property="Foreground" Value="Transparent" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, Source={x:Reference textSource}}"
                                                     Value="">
                                            <Setter Property="Foreground" Value="#FFA3A3A3" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="placeHolderNoUnderline"
           BasedOn="{StaticResource {x:Type TextBox}}"
           TargetType="{x:Type TextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <Label Width="30"
                               Height="30"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               HorizontalContentAlignment="Right"
                               VerticalContentAlignment="Bottom"
                               Content="{TemplateBinding TextSearch.Text}"
                               FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                               FontSize="17"
                               Foreground="White" />
                        <Grid Margin="{TemplateBinding Padding}">
                            <TextBox x:Name="textSource"
                                     HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                     VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                     Panel.ZIndex="2"
                                     materialDesign:TextFieldAssist.IncludeSpellingSuggestions="True"
                                     materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{TemplateBinding Foreground}"
                                     Style="{StaticResource MaterialDesignTextBox}"
                                     Text="{Binding Text, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}">

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}" />
                                </TextBox.Resources>
                            </TextBox>
                            <TextBox HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                     VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                     materialDesign:TextFieldAssist.IncludeSpellingSuggestions="True"
                                     materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                     Background="{TemplateBinding Background}"
                                     BorderThickness="0"
                                     Text="{TemplateBinding Tag}">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}" />
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style BasedOn="{StaticResource MaterialDesignTextBox}"
                                           TargetType="{x:Type TextBox}">
                                        <Setter Property="Foreground" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, Source={x:Reference textSource}}"
                                                         Value="">
                                                <Setter Property="Foreground" Value="#FFA3A3A3" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>