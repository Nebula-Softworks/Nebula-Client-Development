<Page x:Class="Celestia_IDE.Controls.Explorer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Celestia_IDE.Controls"
      xmlns:core="clr-namespace:Celestia_IDE.Core.ExplorerSystem"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="240"
      Title="Explorer"
      DataContext="{Binding A}">

    <Page.Resources>
        <core:BoolToVisibilityConverter x:Key="TrueToVisible" />
        <core:BoolToVisibilityConverter x:Key="FalseToVisible"
                                        Invert="True" />
        <Style x:Key="InvisibleTextBox"
               TargetType="{x:Type TextBox}">
            <Setter Property="TextOptions.TextFormattingMode"
                    Value="Display" />
            <Setter Property="TextOptions.TextRenderingMode"
                    Value="ClearType" />
            <Setter Property="CaretBrush"
                    Value="#FFFFFFFF" />
            <Setter Property="Foreground"
                    Value="#FFFFFFFF" />
            <Setter Property="KeyboardNavigation.TabNavigation"
                    Value="None" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Left" />
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsInactiveSelectionHighlightEnabled"
                                   Value="True" />
                        <Condition Property="IsSelectionActive"
                                   Value="False" />
                    </MultiTrigger.Conditions>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
        
    </Page.Resources>

    <Grid>
        <Label Foreground="#d5d3d7"
               FontSize="12"
               Margin="8"
               FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
               Content="Workspace Explorer"/>
        <Label x:Name="inactive"
               Foreground="#d5d3d7"
               FontSize="14"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
               Content="No Workspace&#x0a;Selected" 
               IsHitTestVisible="False"/>
        <TreeView x:Name="Main"
                  Background="Transparent"
                  BorderBrush="#CF322e36"
                  Foreground="#d5d3d7"
                  Margin="0 90 0 0"
                  Padding="0 0 0 0"
                  BorderThickness="0"
                  VirtualizingPanel.IsVirtualizing="False"
                  Visibility="Visible"
                  FocusVisualStyle="{x:Null}"
                  AllowDrop="True"
                  PreviewMouseLeftButtonDown="Main_MouseDi"
                  MouseDoubleClick="Workspace_SelectedItemChanged">

            <TreeView.ContextMenu>
                <ContextMenu 
                  FocusVisualStyle="{x:Null}">
                    <MenuItem Header="New File"
                              Click="NewFile_Click" />
                    <MenuItem Header="New Folder"
                              Click="NewFolder_Click" />
                </ContextMenu>
            </TreeView.ContextMenu>


            <TreeView.Resources>

                <Style TargetType="TreeViewItem"
                       BasedOn="{StaticResource MaterialDesignTreeViewItem}">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="IsExpanded"
                            Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="AllowDrop"
                            Value="True"/>
                    <Setter Property="BorderBrush"
                            Value="{x:Null}"/>
                </Style>
                <HierarchicalDataTemplate DataType="{x:Type local:FolderItem}"
                                          ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="folder"
                                   FontSize="14"
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"
                                   FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                                   Foreground="#A4A6AA" />
                        <Grid>
                            <TextBlock Text="{Binding Header}"
                                       Visibility="{Binding IsRenaming, Converter={StaticResource FalseToVisible}}"
                                       VerticalAlignment="Center"
                                       Foreground="#d5d3d7"
                                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins" />

                            <TextBox Text="{Binding Header, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsRenaming, Converter={StaticResource TrueToVisible}}"
                                     LostFocus="Rename_LostFocus"
                                     KeyDown="Rename_KeyDown"
                                     VerticalAlignment="Center"
                                     Foreground="#d5d3d7"
                                     VerticalContentAlignment="Center"
                                     Height="24"
                                     Style="{StaticResource InvisibleTextBox}"
                                     FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins" />
                        </Grid>
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type local:LuaFileItem}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Celestia IDE;component/Assets/Graphics/Lua.png"
                               Width="14"
                               Height="14"
                               Margin="0,0,5,0"
                               RenderOptions.BitmapScalingMode="HighQuality" />
                        <Grid>
                            <TextBlock Text="{Binding Header}"
                                       Visibility="{Binding IsRenaming, Converter={StaticResource FalseToVisible}}"
                                       VerticalAlignment="Center"
                                       Foreground="#d5d3d7"
                                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins" />

                            <TextBox Text="{Binding Header, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsRenaming, Converter={StaticResource TrueToVisible}}"
                                     LostFocus="Rename_LostFocus"
                                     KeyDown="Rename_KeyDown"
                                     VerticalAlignment="Center"
                                     Foreground="#d5d3d7"
                                     VerticalContentAlignment="Center"
                                     Height="24"
                                     Style="{StaticResource InvisibleTextBox}"
                                     FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>

                <DataTemplate DataType="{x:Type local:TextFileItem}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xe7c3;"
                                   FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Segoe Fluent Icons"
                                   FontSize="14"
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"
                                   Foreground="#A4A6AA" />
                        <Grid>
                            <TextBlock Text="{Binding Header}"
                                       Visibility="{Binding IsRenaming, Converter={StaticResource FalseToVisible}}"
                                       VerticalAlignment="Center"
                                       Foreground="#d5d3d7"
                                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins" />

                            <TextBox Text="{Binding Header, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsRenaming, Converter={StaticResource TrueToVisible}}"
                                     LostFocus="Rename_LostFocus"
                                     KeyDown="Rename_KeyDown"
                                     VerticalAlignment="Center"
                                     Foreground="#d5d3d7"
                                     VerticalContentAlignment="Center"
                                     Height="24"
                                     Style="{StaticResource InvisibleTextBox}"
                                     FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>


                <DataTemplate DataType="{x:Type local:OtherFileItem}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="code"
                                   FontSize="14"
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"
                                   FontFamily="/Celestia IDE;component/Assets/Fonts/Icon/#Material Icons Round"
                                   Foreground="#A4A6AA" />

                        <Grid>
                            <TextBlock Text="{Binding Header}"
                                       Visibility="{Binding IsRenaming, Converter={StaticResource FalseToVisible}}"
                                       VerticalAlignment="Center"
                                       Foreground="#d5d3d7"
                                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins" />

                            <TextBox Name="renameinput"
                                     Text="{Binding Header, UpdateSourceTrigger=PropertyChanged}"
                                     Visibility="{Binding IsRenaming, Mode=TwoWay, Converter={StaticResource TrueToVisible}}"
                                     LostFocus="Rename_LostFocus"
                                     KeyDown="Rename_KeyDown"
                                     VerticalAlignment="Center"
                                     Foreground="#d5d3d7"
                                     VerticalContentAlignment="Center"
                                     Height="24"
                                     Style="{StaticResource InvisibleTextBox}"
                                     FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
        <Border Background="Transparent"
                BorderBrush="#CF322e36"
                Margin="0 40 0 0"
                VerticalAlignment="Top"
                BorderThickness="0 1.5 0 0" />
        
        <Border x:Name="SearchBorder"
                Background="Transparent"
                BorderBrush="#CF322e36"
                Margin="6 46 6 0"
                Height="38"
                VerticalAlignment="Top"
                BorderThickness="1"
                CornerRadius="4">
            <TextBox x:Name="WorkspaceSearch"
                     Grid.Row="1"
                     Padding="30 0 0 0"
                     VerticalContentAlignment="Center"
                     Tag="Search Workspace"
                     TextSearch.Text="search"
                     FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                     Foreground="#d5d3d7"
                     Background="Transparent"
                     TextChanged="WorkspaceSearch_TextChanged"
                     BorderThickness="0"
                     BorderBrush="Transparent" />
        </Border>
    </Grid>
</Page>
