<UserControl x:Class="Celestia_IDE.Controls.Popup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celestia_IDE.Controls"
             mc:Ignorable="d" 
             UseLayoutRounding="True"
                    MouseLeftButtonDown="Button_MouseLeftButtonDown"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="MainBackground"
            Background="#171619"
            BorderThickness="1.5"
            IsHitTestVisible="True"
            BorderBrush="#aF322e36"
            CornerRadius="8"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0"
                              x:Name="MainBackgroundBorder_Shadow"
                              Color="#0B0B0B"
                              BlurRadius="100"
                              Opacity="0.8" />
        </Border.Effect>
        <Grid Margin="20 15">
            <Button Margin="-20 -15"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"/>
            <StackPanel Orientation="Vertical"
                        MaxWidth="400"
                        HorizontalAlignment="Left">
                <TextBlock x:Name="TitleBlock" 
                    Grid.ColumnSpan="3"
                       TextAlignment="Center"
                           HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Text="Title"
                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                       FontSize="14"
                       Foreground="#e5e3e7"
                       IsHitTestVisible="False"/>
                <TextBlock x:Name="ContentBlock" 
                    Grid.ColumnSpan="3"
                       TextAlignment="Left"
                           HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                           TextWrapping="Wrap"
                       Text="Content"
                           Margin="0 2 0 0"
                       FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                       FontSize="13"
                       Foreground="#b4b6ba"
                       IsHitTestVisible="False"/>
                <StackPanel Margin="0 10 0 0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="AccentButton"
                        Height="35"
                        Background="{StaticResource Accent}"
                        BorderBrush="{StaticResource AccentOpaque}"
                        Content="OK"
                        FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                        FontSize="13"
                        FontWeight="Normal"
                        Foreground="#e5e3e7"
                            materialDesign:ButtonAssist.CornerRadius="5"
                        BorderThickness="1.5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="16 0"/>
                    <Button x:Name="MainButton"
                        Height="35"
                        Background="#8F322e36"
                        BorderBrush="#cf322e36"
                        Content="Cancel"
                        FontFamily="/Celestia IDE;component/Assets/Fonts/#Poppins"
                        FontSize="13"
                            Margin="8 0 0 0"
                        FontWeight="Normal"
                        Foreground="#e5e3e7"
                            materialDesign:ButtonAssist.CornerRadius="5"
                        BorderThickness="1.5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="16 0"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
